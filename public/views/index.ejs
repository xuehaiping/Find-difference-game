<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Find Difference Game</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="views/js/utili.js"></script>


	<!-- jQuery JS (required for Bootstrap)-->
	<script src="views/js/jquery-3.2.1.min.js"></script>
	<!-- Bootstrap CSS -->
	<link href="views/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<!-- Bootstrap JS -->
	<script src="views/bootstrap/js/bootstrap.min.js"></script>

	<script type="text/javascript">
	$(document).ready(function() {
		var imageList = ["heart.jpg", "show.jpg", "bear.jpg"];
		$('#myCarousel ol').append('<li data-target="#myCarousel" data-slide-to="0" class="active"></li>');
		$('#wrapper').append('<div class="item active"><img src="views/image/'+imageList[0]+'" height="900" width="900"></div>');
		for(var i=1; i<imageList.length; i++) {
			$('#myCarousel ol').append('<li data-target="#myCarousel" data-slide-to="' + i.toString() + '"></li>');
			$('#wrapper').append('<div class="item"><img src="views/image/'+imageList[i]+'" height="900" width="900"></div>');
		}
		$('#data button').click( function () {
			document.getElementById('imageId').value = imageList[$('.carousel').find('.item.active').index()];
			// console.log(imageList[$('.carousel').find('.item.active').index()]);
		 });
	});


	</script>

</head>

	<body>
		<div class="container">
			<div class="col-lg-offset-2 col-lg-8">
				<div id="myCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				  </ol>

				  <!-- Wrapper for slides -->
				  <div id="wrapper" class="carousel-inner">
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
				<form action="/game" method="post" id = "data">
					<input id="imageId" type="hidden" name="image" value= "heart.jpg">
				  	<button type="submit" value="Submit" class="btn btn-default btn-sm">
				  	<span class="glyphicon glyphicon-play-circle"></span> Start
				  	</button>
				</form>
			</div>

		</div>

	</body>
</html>
